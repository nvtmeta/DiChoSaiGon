@model DiChoSaiGon.ModelViews.RegisterViewModel

@{
    ViewData["Title"] = "DangkyTaiKhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section HeadStyles {
    <style>
        .login-form {
            border-radius: 14px;
        }

        .btn-17 {
            background-color: #fff;
            border-radius: 12px;
            box-shadow: rgba(0, 0, 0, 0.15) 1.95px 1.95px 2.6px;
            cursor: pointer;
            text-align: center;
            display: flex;
            align-items: center;
            justify-content: center;
            max-width: 120px;
            border: 1px solid #ccc;
            color: #000
        }

            .btn-17:hover {
                background-color: #07c;
            }

        .login-form input {
            border-radius: 10px
        }

        .main-content {
            background-size: cover;
            background-repeat: no-repeat;
            background-image: url("https://media.istockphoto.com/id/498152770/photo/collage-of-beautiful-mens-clothes.jpg?s=170667a&w=0&k=20&c=yD4t6sfbyeV2nMEIpGBOtpUMMLCa1E3jA0Ddf6p5xgk=")
        }



        .login-form {
            background-color: #fff;
            z-index: 4;
            position: relative
        }

        .modal {
            position: fixed;
            inset: 0;
            display: flex;
            background: rgba(0, 0, 0, 0.4);
            z-index: 1
        }
    </style>
}
<div class="modal">
</div>
<main class="main-content">
    <div class="login-register-area section-space-y-axis-100  ">
        <div class="container">
            <div class="row">
                <div class="col-lg-6   m-auto">
                    <form asp-action="DangkyTaiKhoan">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="login-form">
                            <h4 class="login-title">Đăng ký tài khoản</h4>
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Họ và Tên</label>
                                    <input type="text" asp-for="FullName" placeholder="Họ và Tên">
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Địa chỉ Email</label>
                                    <input type="email" asp-for="Email" placeholder="Địa chỉ Email">
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                                <div class="col-md-12">
                                    <label>Số điện thoại</label>
                                    <input type="tel" asp-for="Phone" placeholder="Số điện thoại">
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Mật khẩu</label>
                                    <input type="password" asp-for="Password" placeholder="Mật khẩu">
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                                <div class="col-md-6">
                                    <label>Nhập lại mật khẩu</label>
                                    <input type="password" asp-for="ConfirmPassword" placeholder="Nhập lại mật khẩu">
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="col-6 col-md-12 m-auto d-flex mt-3 justify-content-center">
                                    <button class="text-center mt-6 w-full rounded-md bg-blue-500 py-2 font-medium text-blue-50 hover:bg-blue-600">Đăng ký</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</main>
