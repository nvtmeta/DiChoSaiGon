@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<DiChoSaiGon.Models.TinDang>

@{
    ViewData["TiTle"] = "Blog - " + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    //int PageCurrent = ViewBag.CurrentPage;
    //int PageNext = PageCurrent + 1;
}

@section HeadStyles {

<style>
    .blog-item {
        box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px;
        background: #fff;
        border-radius: 20px;
        margin:20px;
       

    }

    .blog-content {
        background-color: #fff;
        border-radius: 20px;
    }

    .img-blog {
        border-top-left-radius:20px;
        border-top-right-radius:20px;
        width:100%;
        height:500px
    }

    .img-blog:hover {
        border-radius: 20px
    }
    .short-desc {
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    }
    

</style>


}



<main class="main-content">
    <div class="breadcrumb-area breadcrumb-height" data-bg-image="~/assets/images/breadcrumb/bg/1-1-1920x373.jpg">
        <div class="container h-100">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Blog</h2>
                        <ul>
                            <li>
                                <a href="index.html">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Blog Default</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    


    @*// phan blog main content*@
    <div class="blog-area blog-column-2 section-space-y-axis-100">
        <div class="container">
            <div class="row blog-container">

                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        string url = $"/tin-tuc/{item.Alias}-{item.PostId}.html";

                        <div class="col-md-6 ">
                            <div class="blog-item">
                                <div class="blog-img img-zoom-effect">
                                    <a href="@url">
                                        <img class="img-full img-blog"
                                             src="~/images/news/@item.Thumb" alt="Blog Image">
                                    </a>
                                </div>
                                <div class="blog-content"  style="">
                                    <div class="blog-meta text-dim-gray pb-3">
                                        <ul>
                                            <li class="date"><i class="fa fa-calendar-o me-2"></i>@item.CreatedDate</li>
                                          
                                        </ul>
                                    </div>
                                    <h5 class="title mb-4" style="color: #ccc; --hover-color: green ">
                                        <a href="@url">@item.Title</a>
                                    </h5>
                                    <p class="short-desc mb-5">@item.Contents</p>
                                    <div class="button-wrap">
                                        <a style="  "  class="btn btn-custom-size lg-size btn-dark  " href="@url">Read More</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }

             


            </div>
        </div>
    </div>
</main>

