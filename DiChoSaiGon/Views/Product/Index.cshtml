@model IEnumerable<DiChoSaiGon.Models.Product>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@section HeadStyles {
    <style>

        .product-item {
            width: 100%;
            border-radius: 10px !important;
            transition: .5s;
        }

        .img-full {
            box-shadow: rgba(0,0,0,0.24) 3px 3px 8px;
            border-radius: 10px;
            background-color: ghostwhite;
            border: 1px solid #fff
        }

        .product-item:hover {
            border: 1px solid #006411;
            padding: 1px
        }

        .breadcrumb-heading {
            font-family: 'Roboto Condensed','Helvetica Neue',Helvetica,Arial,sans-serif;
        }

        .product-name:hover {
            color: red;
        }
    </style>
}



<!-- Begin Main Content Area -->
<main class="main-content ">
    <div class="breadcrumb-area breadcrumb-height ">
        <div class="container h-100 mb-n10">
            <div class="row h-100">
                <div class="col-lg-12">
                    <div class="breadcrumb-item">
                        <h2 class="breadcrumb-heading">Danh Sách Sản Phẩm</h2>
                        <ul>
                            <li>
                                <a href="/">Home <i class="pe-7s-angle-right"></i></a>
                            </li>
                            <li>Shop Pages</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="shop-area m-b-50 mt-n10">
        <div class="container">

            <div class="tab-content text-charcoal pt-8">
                <div class="tab-pane fade show active" id="grid-view" role="tabpanel" aria-labelledby="grid-view-tab">
                    <div class="product-grid-view row">
                        @if (Model != null && Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                string url = $"/{item.Alias}-{item.ProductId}.html";


                                <div class="col-lg-3 col-sm-6 pt-6 pt-sm-0">
                                    <div class="product-item">
                                        <div class="product-img img-zoom-effect">
                                            <a href="@url">
                                                <img class="img-full" src="~/images/products/@item.Thumb" alt="@item.Title">
                                            </a>
                                            <div class="product-add-action">
                                                <ul>
                                                    <li>
                                                        <a href="@url">
                                                            <i class="pe-7s-cart"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="compare.html">
                                                            <i class="pe-7s-shuffle"></i>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="wishlist.html">
                                                            <i class="pe-7s-like"></i>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="product-content">
                                            <a class="product-name" style="color:black; font-family: 'Roboto Condensed','Helvetica Neue',Helvetica,Arial,sans-serif;font-size:17px;" href="@url">@item.ProductName</a>
                                            <div class="price-box pb-1">
                                                <span class="new-price">@item.Price.Value.ToString("#,##0") VNĐ</span>
                                                <style>
                                                    .new-price {
                                                        color: #ba1234;
                                                        font-family: 'Roboto Condensed','Helvetica Neue',Helvetica,Arial,sans-serif;
                                                        font-style: normal;
                                                        font-weight: 400;
                                                        line-height: 1.5;
                                                        font-weight: bold;
                                                    }
                                                </style>
                                            </div>
                                            <div class="rating-box">
                                                <ul>
                                                    <li><i class="pe-7s-star"></i></li>
                                                    <li><i class="pe-7s-star"></i></li>
                                                    <li><i class="pe-7s-star"></i></li>
                                                    <li><i class="pe-7s-star"></i></li>
                                                    <li><i class="pe-7s-star"></i></li>
                                                </ul>
                                            </div>
                                            <p class="short-desc mb-0">@item.ShortDesc</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        }


                    </div>

                </div>
            </div>
        </div>
    </div>
</main>
<!-- Main Content Area End Here -->